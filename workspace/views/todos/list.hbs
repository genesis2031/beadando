
{{#each messages}}
<div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header">
    <h1>Elvégzendő feladatok</h1>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Státusz</th>
            <th>Név</th>
            <th>Leírás</th>
            <th>Prioritás</th>
            <th>Dátum</th>
        </tr>   
    </thead>
    <tbody>
        {{#each todos}}
        <tr>
            <td><span class="label label-{{statusClass}}">{{statusText}}</span></td>
            <td>{{name}}</td>
            <td><span class="badge">{{numberOfMessages}}</span> {{description}}</td>
            <td><span class="label label-{{statusClass}}">{{priority}}</span></td>
            <td>{{date}}</td>
            <td><a href="/todos/edit/{{name}}" class="list-group-item">Módosítás</a></td>
            <td><a href="/todos/remove/{{name}}" class="list-group-item">Törlés</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>

<p><a href="/todos/new" class="btn btn-default">Új feladat felvitele</a></p>